<div class="backgroundre">
    <div class="mainContainer">
        <form class="layout" id="register">
            <p> registreren </p>

            <div class="loginText">
                <input type="text" placeholder="Username" name="username" required>
                <input type="password" placeholder="Password" name="password" required>
                <input type="password" placeholder="Re-Password" name="password_confirm" required>
                <img id="next" src="~/img/icons/buttonlogin.png" alt="loginknop" height="25">
            </div>

            <div class="buttonLogin">
                <input type="checkbox" name="voorwaardeprivacy" value="privacyvoorwaarde" required>
                Ik ga akkoord met de <a id="policy">algemene voorwaarden</a>
            </div>
        </form>
    </div>
</div>